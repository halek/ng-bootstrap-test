{
  "manifest_version": 2,

  "name": "LoyaltyCog",
  "description": "Asistente para o programa LoyaltyCog",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "assets/img/icon_16.png",
    "default_popup": "index.html"
  },

  "icons": { "16": "assets/img/icon_16.png",
           "48": "assets/img/icon_48.png",
          "128": "assets/img/icon_128.png" },

 "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "identity.email",
    "https://loyaltycog.mybluemix.net/"
  ]

}
